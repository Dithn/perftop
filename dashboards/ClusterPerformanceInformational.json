{
  "endpoint": "localhost:9600",
  "gridOptions": {
    "rows": 12,
    "cols": 12
  },
  "graphs": {
    "tables": [
      {
        "queryParams" : {
          "metrics": "CB_EstimatedSize,CB_ConfiguredSize",
          "aggregates": "max,max",
          "dimensions": "CBType",
          "sortBy": "CB_EstimatedSize"
        },
        "options": {
          "gridPosition": {
            "row": 9,
            "col": 0,
            "rowSpan": 3,
            "colSpan": 6
          },
          "label": "Circuit Breaker - Estimated and Configured Limits",
          "keys": false,
          "fg": "blue",
          "selectedFg": "blue",
          "selectedBg": " ",
          "columnSpacing": 1,
          "refreshInterval": 5000
        }
      },
      {
        "queryParams" : {
          "metrics": "ThreadPool_QueueSize,ThreadPool_RejectedReqs",
          "aggregates": "max,sum",
          "dimensions": "ThreadPoolType",
          "sortBy": "ThreadPool_RejectedReqs"
        },
        "options": {
          "gridPosition": {
            "row": 0,
            "col": 0,
            "rowSpan": 3,
            "colSpan": 7
          },
          "label": "Thread Pool",
          "keys": false,
          "fg": "green",
          "selectedFg": "green",
          "selectedBg": " ",
          "columnSpacing": 1,
          "refreshInterval": 5000
        }
      },
      {
        "queryParams" : {
          "metrics": "Merge_Event,Merge_Time",
          "aggregates": "sum,avg",
          "dimensions": "IndexName",
          "sortBy": "Merge_Event"
        },
        "options": {
          "gridPosition": {
            "row": 3,
            "col": 0,
            "rowSpan": 3,
            "colSpan": 6
          },
          "label": "Index Merge",
          "keys": false,
          "fg": "cyan",
          "selectedFg": "cyan",
          "selectedBg": " ",
          "columnSpacing": 1,
          "refreshInterval": 5000
        }
      },
      {
        "queryParams" : {
          "metrics": "Flush_Event,Flush_Time",
          "aggregates": "sum,avg",
          "dimensions": "IndexName",
          "sortBy": "Flush_Event"
        },
        "options": {
          "gridPosition": {
            "row": 3,
            "col": 6,
            "rowSpan": 3,
            "colSpan": 6
          },
          "label": "Index Flush",
          "keys": false,
          "fg": "cyan",
          "selectedFg": "cyan",
          "selectedBg": " ",
          "columnSpacing": 1,
          "refreshInterval": 5000
        }
      },
      {
        "queryParams" : {
          "metrics": "Paging_MajfltRate,Paging_MinfltRate",
          "aggregates": "sum,sum",
          "dimensions": "Operation,IndexName,ShardID",
          "sortBy": "Paging_MajfltRate"
        },
        "options": {
          "gridPosition": {
            "row": 6,
            "col": 0,
            "rowSpan": 3,
            "colSpan": 12
          },
          "label": "Page Faults",
          "keys": false,
          "fg": "white",
          "selectedFg": "white",
          "selectedBg": " ",
          "columnSpacing": 1,
          "refreshInterval": 5000
        }
      }
    ],
    "bars": [
      {
        "queryParams" : {
          "metrics": "CB_TrippedEvents",
          "aggregates": "sum",
          "dimensions": "CBType"
        },
        "options": {
          "gridPosition": {
            "row": 9,
            "col": 6,
            "rowSpan": 3,
            "colSpan": 6
          },
          "label": "Circuit Breaker - Tripped (count)",
          "labelColor": "blue",
          "barWidth": 18,
          "xOffset": 2,
          "maxHeight": 6,
          "refreshInterval": 5000
        }
      }
    ],
    "lines": [
      {
        "queryParams" : {
          "metrics": "Master_PendingQueueSize",
          "aggregates": "max",
          "dimensions": ""
        },
        "options": {
          "gridPosition": {
            "row": 0,
            "col": 7,
            "rowSpan": 3,
            "colSpan": 5
          },
          "label": "Master Pending Tasks (count)",
          "showNthLabel": 3,
          "showLegend": true,
          "legend": { "width": 10 },
          "xAxis": ["0:00", "0:05", "0:10", "0:15", "0:20", "0:25", "0:30", "0:35", "0:40", "0:45", "0:50", "0:55"],
          "refreshInterval": 5000
        }
      }
    ]
  }
}